<h2>Register Expense</h2>

<div>
    <form name="ExpenseForm">
        <div class="form-group">
            <label for="categorySelect">Category</label>
            <select class="form-control" ng-model="SelectedValue" data-ng-options="c as c.Name for c in Categories" data-ng-change="">
                <option value="">-- Category --</option>
            </select>

        </div>
        <div class="form-group">
            <label>Amount</label>
            <input type="text" class="form-control" placeholder="Amount" ng-model="Expense.Amount">
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control" placeholder="Date" ng-model="Expense.Date">
        </div>
        <button type="button" class="btn" ng-click="Back()">Back</button>
        <button type="submit" class="btn btn-primary" ng-click="Save()">Save</button>
    </form>
    <br />
    <div ng-class="resultCss">{{message}}</div>
</div>
